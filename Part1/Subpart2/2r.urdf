<robot name="2R_robot">
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <link name="base_link">
        <inertial>
            <origin xyz="8e-05 0.02446 -0.00146" rpy="0 0 0"/>
