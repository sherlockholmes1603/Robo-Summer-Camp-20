            <inertia ixx="0.00196" ixy="0" ixz="0" iyy="0.00133" iyz="-2e-05" izz="0.0023"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.7 0.7 0.10"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0 0.00015 -0.00044" rpy="0 0 0"/>
            <geometry>
                <box size="0.7 0.7 0.10"/>
            </geometry>
        </collision>
    </link>
    <link name="link1">
        <visual>
            <geometry>
