        </visual>
    </link>
    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 1.05" rpy="0.0 0.5 0.0"/>
        <limit effort="200" lower="-3.14" upper="3.14" velocity="1.0"/>
        <axis xyz= "1 0 0"/>
    </joint>
